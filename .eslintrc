{
  "globals": {
    "expect": true,
    "describe":true,
    "shallow":true,
    "spy":true,
    "it":true,
    "mount":true
  },
  "extends": "@folio/eslint-config-stripes",
  "overrides": [
    {
      "files": ["tests/**/*"],
      "rules": {
        "no-unused-expressions": "off",
        "func-names": "off"
      }
    }
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-unused-expressions": "off",
    "func-names": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
